#include <iostream>
#include <string>
using namespace std;

class User
{
  public:
    int id;
    string username;
    string email;
    string database[100];

  void add_user(int user_id, string name, string mail)
  {
    id = user_id;
    username = name;
    email = mail;

    
  }
  void show_user()
  {
    cout << "User ID : " << id << endl;
    cout << "Name : " << username << endl;
    cout << "E-mail : "<< email << endl;
    cout << "Data : "<< database << endl;
  }
};
int main() {
    User Anik;
    Anik.add_user(105, "Raihan", "anikraihan17@gmail.com");
    Anik.show_user();
    return 0;
}
